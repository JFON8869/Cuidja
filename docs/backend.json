
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Mercado Local Cuidja platform.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number."
        },
        "isSeller": {
          "type": "boolean",
          "description": "Indicates whether the user is a seller."
        },
        "addresses": {
          "type": "array",
          "description": "A list of the user's saved addresses.",
          "items": {
            "$ref": "#/backend/entities/Address"
          }
        }
      },
      "required": [
        "id",
        "name",
        "email"
      ]
    },
    "Address": {
      "title": "Address",
      "type": "object",
      "description": "Represents a user's saved address or a shipping address.",
      "properties": {
        "nickname": {
          "type": "string",
          "description": "A nickname for a saved address (e.g., Casa, Trabalho)."
        },
        "zip": {
          "type": "string"
        },
        "street": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "neighborhood": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "description": "Recipient's name for a shipping address."
        }
      },
      "required": [
        "street",
        "number",
        "city",
        "zip"
      ]
    },
    "Store": {
      "title": "Store",
      "type": "object",
      "description": "Represents a seller's store.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "address": {"type": "string"},
        "logoUrl": {"type": "string", "format": "uri"},
        "categories": {
            "type": "array",
            "items": {"type": "string"},
            "description": "A list of product categories offered by the store."
        },
        "operatingHours": {
          "type": "object",
          "properties": {
            "sun": { "$ref": "#/backend/entities/DayOperatingHours" },
            "mon": { "$ref": "#/backend/entities/DayOperatingHours" },
            "tue": { "$ref": "#/backend/entities/DayOperatingHours" },
            "wed": { "$ref": "#/backend/entities/DayOperatingHours" },
            "thu": { "$ref": "#/backend/entities/DayOperatingHours" },
            "fri": { "$ref": "#/backend/entities/DayOperatingHours" },
            "sat": { "$ref": "#/backend/entities/DayOperatingHours" }
          }
        }
      },
      "required": ["id", "userId", "name", "address"]
    },
    "DayOperatingHours": {
        "title": "DayOperatingHours",
        "type": "object",
        "properties": {
            "isOpen": { "type": "boolean" },
            "open": { "type": "string", "format": "time" },
            "close": { "type": "string", "format": "time" }
        },
        "required": ["isOpen"]
    },
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product or service listed on the Mercado Local Cuidja platform.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Product entity."
        },
        "sellerId": {
          "type": "string",
          "description": "Reference to User (Seller). (Relationship: User 1:N Product)"
        },
        "storeId": {
            "type": "string",
            "description": "Reference to Store."
        },
        "name": {
          "type": "string",
          "description": "The name of the product or service."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the product or service."
        },
        "price": {
          "type": "number",
          "description": "The price of the product or service (or visit fee for services)."
        },
        "images": {
            "type": "array",
            "items": {
                "$ref": "#/backend/entities/ImagePlaceholder"
            },
            "maxItems": 3
        },
        "category": {
          "type": "string",
          "description": "Category of the product (e.g., 'Fruits', 'Vegetables', 'Serviços', 'Bebidas')."
        },
        "type": {
            "type": "string",
            "enum": ["PRODUCT", "SERVICE"],
            "description": "Explicitly defines if the item is a product or a service."
        },
        "attendanceType": {
          "type": "string",
          "enum": ["presencial", "online", "ambos"]
        },
        "addons": {
          "type": "array",
          "description": "List of add-on groups for the product.",
          "items": {
            "$ref": "#/backend/entities/AddonGroup"
          }
        },
        "availability": {
            "type": "string",
            "enum": ["available", "on_demand", "unavailable"],
            "description": "The stock status of the product."
        }
      },
      "required": [
        "id",
        "sellerId",
        "storeId",
        "name",
        "description",
        "price",
        "category",
        "availability",
        "type"
      ]
    },
    "ImagePlaceholder": {
        "title": "ImagePlaceholder",
        "type": "object",
        "properties": {
            "imageUrl": {"type": "string"},
            "imageHint": {"type": "string"}
        }
    },
    "AddonGroup": {
      "title": "AddonGroup",
      "type": "object",
      "description": "A group of add-on options for a product.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "type": { "enum": ["single", "multiple"] },
        "addons": {
          "type": "array",
          "items": { "$ref": "#/backend/entities/Addon" }
        }
      },
      "required": ["id", "title", "type", "addons"]
    },
    "Addon": {
      "title": "Addon",
      "type": "object",
      "description": "A single add-on option for a product.",
      "properties": {
        "name": { "type": "string" },
        "price": { "type": "number" }
      },
      "required": ["name", "price"]
    },
    "Order": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Order",
      "type": "object",
      "description": "Represents a product order or service request on the platform.",
      "properties": {
        "id": { "type": "string" },
        "customerId": { "type": "string" },
        "sellerId": { "type": "string" },
        "storeId": { "type": "string" },
        "orderType": { "type": "string", "enum": ["PURCHASE", "SERVICE_REQUEST"], "description": "Defines the type of order."},
        "items": {
          "type": "array",
          "items": { "$ref": "#/backend/entities/OrderItem" }
        },
        "serviceId": { "type": "string" },
        "serviceName": { "type": "string" },
        "customerName": { "type": "string" },
        "customerPhone": { "type": "string" },
        "orderDate": { "type": "string", "format": "date-time" },
        "totalAmount": { "type": "number" },
        "status": {
          "type": "string",
          "enum": ["Pendente", "Confirmado", "Em Preparo", "Saiu para Entrega", "Entregue", "Cancelado", "Solicitação Recebida", "Em Conversa", "Orçamento Enviado", "Em Execução", "Concluído"]
        },
        "isUrgent": { "type": "boolean" },
        "shippingAddress": { "$ref": "#/backend/entities/Address" },
        "phone": { "type": "string" },
        "sellerHasUnread": { "type": "boolean" },
        "buyerHasUnread": { "type": "boolean" },
        "lastMessageTimestamp": { "type": "string", "format": "date-time"}
      },
      "required": [
        "id",
        "customerId",
        "storeId",
        "orderDate",
        "status"
      ]
    },
    "OrderItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OrderItem",
      "type": "object",
      "description": "Represents an item within an order (can be a product or a service).",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
            "type": "string"
        },
        "price": {
          "type": "number"
        },
        "quantity": {
          "type": "number"
        },
        "selectedAddons": {
          "type": "array",
          "items": { "$ref": "#/backend/entities/SelectedAddon" }
        }
      },
      "required": [
        "id",
        "name",
        "quantity",
        "price"
      ]
    },
    "SelectedAddon": {
      "title": "SelectedAddon",
      "type": "object",
      "description": "A single add-on option for a product with quantity.",
      "properties": {
        "name": { "type": "string" },
        "price": { "type": "number" },
        "quantity": { "type": "number" }
      },
      "required": ["name", "price", "quantity"]
    },
    "Message": {
      "title": "Message",
      "type": "object",
      "description": "A single chat message within an order.",
      "properties": {
        "senderId": { "type": "string" },
        "text": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["senderId", "text", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user information. Security is based on the user ID (path-based ownership).",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier for the user."
            }
          ]
        }
      },
      {
        "path": "stores/{storeId}",
        "definition": {
            "entityName": "Store",
            "schema": { "$ref": "#/backend/entities/Store" },
            "description": "Stores public information about a seller's store.",
            "params": [
                {
                    "name": "storeId",
                    "description": "The unique identifier for the store."
                }
            ]
        }
      },
      {
        "path": "products/{productId}",
        "definition": {
          "entityName": "Product",
          "schema": {
            "$ref": "#/backend/entities/Product"
          },
          "description": "Stores all products and services available on the platform.",
          "params": [
            {
              "name": "productId",
              "description": "The unique identifier for the product/service."
            }
          ]
        }
      },
      {
        "path": "orders/{orderId}",
        "definition": {
          "entityName": "Order",
          "schema": {
            "$ref": "#/backend/entities/Order"
          },
          "description": "Stores all product orders and service requests on the platform.",
          "params": [
            {
              "name": "orderId",
              "description": "The unique identifier for the order."
            }
          ]
        }
      }
    ]
  }
}

    

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to improve readability and reuse of logic.
    function isSignedIn() {
      return request.auth != null;
    }

    // Checks if the requesting user is the owner based on a UID.
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Validates that the customerId on a new document matches the creator's UID.
    function isCreatingOwn(fieldName) {
        return isSignedIn() && request.resource.data[fieldName] == request.auth.uid;
    }

    // Validates that the sellerId on a new resource (product/service) matches the creator's UID.
    function isCreatingOwnResource() {
        return isSignedIn() && request.resource.data.sellerId == request.auth.uid;
    }

    // Checks if the requesting user is the owner of a document via a denormalized field.
    function isDocumentOwner(doc, fieldName) {
      return isSignedIn() && resource != null && request.auth.uid == doc[fieldName];
    }
    
    // Checks if the requesting user is the seller of a product/service via a denormalized field.
    function isResourceSeller(doc) {
      return isSignedIn() && resource != null && request.auth.uid == doc.sellerId;
    }
    
    match /users/{userId} {
      allow get, update, delete: if isOwner(userId);
      allow list: if false; 
      allow create: if isOwner(userId);
    }

    match /stores/{storeId} {
        allow get, list: if true;
        allow create: if isCreatingOwn('userId');
        allow update, delete: if isOwner(resource.data.userId);
    }
    
    match /products/{productId} {
      allow get, list: if true;
      allow create: if isCreatingOwnResource();
      allow update, delete: if isResourceSeller(resource.data);
    }

    match /orders/{orderId} {
      function isOrderCustomer() {
        return isDocumentOwner(resource.data, 'customerId');
      }

      function getStoreOwnerId() { 
        return get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.userId; 
      }
      function isOrderSeller() {
        return request.auth.uid == getStoreOwnerId();
      }
      
      function isOrderParticipant() {
        return isOrderCustomer() || isOrderSeller();
      }

      allow get: if isSignedIn() && isOrderParticipant();
      allow create: if isSignedIn() && isCreatingOwn('customerId');
      allow update: if isSignedIn() && isOrderParticipant();
      allow delete: if false; // Orders should not be deleted.
      allow list: if false; // Globally deny listing. Queries need filters.

      match /messages/{messageId} {
        allow get, list: if isSignedIn() && isOrderParticipant();
        allow create: if isSignedIn() && isOrderParticipant() && isCreatingOwn('senderId');
        allow update, delete: if false;
      }
    }

    match /serviceRequests/{requestId} {
      function isRequestCustomer() { return isDocumentOwner(resource.data, 'customerId'); }
      function getServiceStoreOwnerId() { return get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.userId; }
      function isRequestSeller() { return request.auth.uid == getServiceStoreOwnerId(); }
      function isRequestParticipant() { return isRequestCustomer() || isRequestSeller(); }
      
      allow get: if isSignedIn() && isRequestParticipant();
      allow create: if isSignedIn() && isCreatingOwn('customerId');
      allow update: if isSignedIn() && isRequestParticipant();
      allow delete: if false;
      allow list: if false;

       match /messages/{messageId} {
        allow get, list: if isSignedIn() && isRequestParticipant();
        allow create: if isSignedIn() && isRequestParticipant() && isCreatingOwn('senderId');
        allow update, delete: if false;
      }
    }
  }
}

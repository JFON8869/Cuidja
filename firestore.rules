
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to improve readability and reuse of logic.
    function isSignedIn() {
      return request.auth != null;
    }

    // Checks if the requesting user is the owner based on a UID.
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Validates that the customerId on a new document matches the creator's UID.
    function isCreatingOwn(fieldName) {
        return isSignedIn() && request.resource.data[fieldName] == request.auth.uid;
    }

    // Validates that the sellerId on a new resource (product/service) matches the creator's UID.
    function isCreatingOwnResource() {
        return isSignedIn() && request.resource.data.sellerId == request.auth.uid;
    }

    // Checks if the requesting user is the owner of a document via a denormalized field.
    function isDocumentOwner(doc, fieldName) {
      return isSignedIn() && resource != null && request.auth.uid == doc[fieldName];
    }
    
    // Checks if the requesting user is the seller of a product/service via a denormalized field.
    function isResourceSeller(doc) {
      return isSignedIn() && resource != null && request.auth.uid == doc.sellerId;
    }
    
    match /users/{userId} {
      allow get, update, delete: if isOwner(userId);
      allow list: if false; 
      allow create: if isOwner(userId);
    }

    match /stores/{storeId} {
        allow get, list: if true;
        allow create: if isCreatingOwn('userId');
        allow update, delete: if isOwner(resource.data.userId);
    }
    
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if isCreatingOwnResource();
      allow update, delete: if isResourceSeller(resource.data);
    }

    match /orders/{orderId} {
      function isOrderCustomer() {
        return isDocumentOwner(resource.data, 'customerId');
      }

      function isOrderSeller() {
        let storeData = get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data;
        return isOwner(storeData.userId);
      }
      
      function isOrderParticipant() {
        return isOrderCustomer() || isOrderSeller();
      }

      // Allow buyer to only update their 'buyerHasUnread' status or send messages
      function isBuyerUpdating() {
        let onlyAllowedFields = request.resource.data.keys().removeAll(['buyerHasUnread', 'messages', 'lastMessageTimestamp', 'sellerHasUnread']);
        return isOrderCustomer() 
            && request.resource.data.customerId == resource.data.customerId // Can't change customerId
            && onlyAllowedFields.size() == 0;
      }
      
      // Allow seller to update status, their 'sellerHasUnread' status, or send messages
      function isSellerUpdating() {
        let onlyAllowedFields = request.resource.data.keys().removeAll(['status', 'sellerHasUnread', 'messages', 'lastMessageTimestamp', 'buyerHasUnread']);
        return isOrderSeller() 
            && request.resource.data.customerId == resource.data.customerId // Can't change customerId
            && onlyAllowedFields.size() == 0;
      }

      allow get, list: if isOrderParticipant();
      allow create: if isCreatingOwn('customerId');
      
      // Split update rules for buyer and seller for better security
      allow update: if isBuyerUpdating() || isSellerUpdating();
      allow delete: if false;
    }
  }
}

    